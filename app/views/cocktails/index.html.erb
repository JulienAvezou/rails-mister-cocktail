<h1>Discover the trendiest drinks on the market</h1>
<div class="banner"></div>


<ul class="list-group">
  <% @cocktails.each do |cocktail| %>
    <li class="list-group-item"><%= link_to cocktail.name, cocktail_path(cocktail) %><%= link_to 'X',
      cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<div class="align">
<%= link_to 'Create your craziest drink now', new_cocktail_path, class: "btn btn-primary"%>
</div>
